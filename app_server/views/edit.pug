extends layout

block content
  .container
    .row
      .col-md-12
        .panel
          .panel-body
          .panel-body
            // /articles
            each a in article
              .row
                .col-sm-6            
                  h2 Edit Article
              br
              form(action='', method='post', role='form')
                - if (error == 'val')
                  .alert.alert-danger(role="alert") All fields required, please try again
                .row
                  .col-sm-6
                      .form-group
                        label(for='author') Author:
                        input#title.form-control(type='text', name='author' value= a.author)
                        br                        
                      .form-group
                        label(for='title') Title:
                        input#title.form-control(type='text', name='title' value= a.title)
                        br
                      .form-group
                        label(for='text') Text:
                        textarea#text.form-control(rows='5', name='text')
                          =a.text
                br
                hr
                // /articles
                .btn-toolbar
                - var id= a.articleid
                  .btn-group
                    button.btn.btn-success#btnEdit(type='submit')
                      i.glyphicon.glyphicon-ok
                      |  Save
                  .btn-group.pull-right
                    a.btn.btn-danger#btnCancel(href='/article/' + id)
                      i.glyphicon.glyphicon-remove
                      |  Cancel
        // /col-12